<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_simple_form" model="ir.ui.view">
            <field name="name">res.partner.simplified.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_simple_form"/>
            <field name="arch" type="xml">
                <form string="Contact">
                    <sheet>
                        <field name="image" widget='image'
                               class="oe_avatar oe_left"
                               options='{"preview_image": "image_medium"}'/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" style="width: 70%%"/>
                            </h1>
                            <field name="category_id" widget="many2many_tags"
                                   placeholder="Tags..." style="width: 70%%"/>
                        </div>
                        <group>
                            <field name="function"
                                   placeholder="e.g. Sales Director"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                        </group>

                        <group invisible="True">
                            <label for="type"/>
                            <div name="div_type">
                                <field class="oe_inline" name="type"/>
                            </div>
                            <label for="street" string="Address"/>
                            <div name="div_address">
                                <field name="street" placeholder="Street..."/>
                                <field name="street2"/>
                                <div class="address_format">
                                    <field name="city" placeholder="City"
                                           style="width: 40%%"/>
                                    <field name="state_id" class="oe_no_button"
                                           placeholder="State"
                                           style="width: 37%%"
                                           options='{"no_open": True}'
                                           on_change="onchange_state(state_id)"/>
                                    <field name="zip" placeholder="ZIP"
                                           style="width: 20%%"/>
                                </div>
                                <field name="country_id" placeholder="Country"
                                       class="oe_no_button"
                                       options='{"no_open": True}'/>
                            </div>
                        </group>
                        <field name="supplier" invisible="True"/>
                        <field name="customer" invisible="True"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="qq_view_partner_form">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='street']" position="replace"/>
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="replace"/>
                <xpath expr="//field[@name='zip']" position="replace"/>
                <xpath expr="//field[@name='city']" position="replace"/>
                <xpath expr="//field[@name='country_id']" position="replace"/>

                <xpath expr="//group/group/div/div[@class='o_address_format']"
                       position="replace">
                    <div name="kladr_address">
                        <field name="country_id" placeholder="Country"
                               class="oe_no_button"
                               options='{"no_open": True}'/>
                        <field name="city" widget="kladr_city"
                               placeholder="City/Town"/>
                        <div class="address_format">
                            <field name="district" widget="kladr_district"
                                   placeholder="District" style="width: 50%%"/>
                            <field name="state_id" invisible="True"/>
                            <field name="state_id_kladr" widget="kladr_region"
                                   placeholder="State" style="width: 50%%"
                                   on_change="onchange_state(state_id_kladr)"/>
                        </div>
                        <field name="street" placeholder="Street..."
                               widget="kladr_street"/>
                        <div class="address_format_house_office">
                            <field name="house" placeholder="House"
                                   widget="kladr_house" style="width: 37%%"/>
                            <field name="office" placeholder="Office/Appartment"
                                   style="width: 39%%"/>
                            <field name="zip" placeholder="ZIP"
                                   widget="kladr_zip" style="width: 17%%"/>
                        </div>
                    </div>

                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Addresses"
                          attrs="{'invisible': [('is_company','!=', True)]}">
                        <group>
                            <group string="Real address">
                                <field name="real_use_main"
                                       on_change="real_change(real_use_main,country_id,city,district,state_id_kladr,street,house,office,zip)"/>
                                <label for="street_real" string="Address"/>
                                <div name="kladr_address">
                                    <field name="country_id_real"
                                           placeholder="Country"
                                           class="oe_no_button"
                                           options='{"no_open": True}'/>
                                    <field name="city_real" widget="kladr_city"
                                           placeholder="City/Town"/>
                                    <div class="address_format">
                                        <field name="district_real"
                                               widget="kladr_district"
                                               placeholder="District"
                                               style="width: 50%%"/>
                                        <field name="state_id_real"
                                               widget="kladr_region"
                                               placeholder="State"
                                               style="width: 50%%"/>
                                    </div>
                                    <field name="street_real"
                                           placeholder="Street..."
                                           widget="kladr_street"/>
                                    <div class="address_format_house_office">
                                        <field name="house_real"
                                               placeholder="House"
                                               widget="kladr_house"
                                               style="width: 37%%"/>
                                        <field name="office_real"
                                               placeholder="Office/Appartment"
                                               style="width: 39%%"/>
                                        <field name="zip_real" placeholder="ZIP"
                                               widget="kladr_zip"
                                               style="width: 17%%"/>
                                    </div>
                                </div>
                            </group>
                            <group string="Post address">
                                <field name="post_use_main"
                                       on_change="post_change(post_use_main,country_id,city,district,state_id_kladr,street,house,office,zip)"/>
                                <label for="street_post" string="Address"/>
                                <div name="kladr_address">
                                    <field name="country_id_post"
                                           placeholder="Country"
                                           class="oe_no_button"
                                           options='{"no_open": True}'/>
                                    <field name="city_post" widget="kladr_city"
                                           placeholder="City/Town"/>
                                    <div class="address_format">
                                        <field name="district_post"
                                               widget="kladr_district"
                                               placeholder="District"
                                               style="width: 50%%"/>
                                        <field name="state_id_post"
                                               widget="kladr_region"
                                               placeholder="State"
                                               style="width: 50%%"/>
                                    </div>
                                    <field name="street_post"
                                           placeholder="Street..."
                                           widget="kladr_street"/>
                                    <div class="address_format_house_office">
                                        <field name="house_post"
                                               placeholder="House"
                                               widget="kladr_house"
                                               style="width: 37%%"/>
                                        <field name="office_post"
                                               placeholder="Office/Appartment"
                                               style="width: 39%%"/>
                                        <field name="zip_post" placeholder="ZIP"
                                               widget="kladr_zip"
                                               style="width: 17%%"/>
                                    </div>
                                </div>
                            </group>
                        </group>
                    </page>
                </xpath>


            </field>
        </record>


    </data>
</openerp>

